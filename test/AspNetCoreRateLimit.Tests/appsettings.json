{
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },

    "RateLimitOptions": {
        "Identity": "IdAndIp",
        "EnableEndpointRateLimiting": true,
        "StackBlockedRequests": false,
        "RealIpHeader": "X-Real-IP",
        "ClientIdHeader": "X-ClientId",
        "HttpStatusCode": 429,
        "MonitoredPaths": [ "*:/api" ],
        "IpWhitelist": [ "::1/10", "192.168.0.0/24" ],
        "EndpointWhitelist": [ "delete:/api/values", "*:/api/ClientRateLimit", "*:/api/IpRateLimit", "delete:/api/clients" ],
        "ClientWhitelist": [ "cl-key-a", "cl-key-b" ],
        "GeneralRules": [
            {
                "Endpoint": "*",
                "Period": "1s",
                "Limit": 2
            },
            {
                "Endpoint": "*",
                "Period": "1m",
                "Limit": 5
            },
            {
                "Endpoint": "post:/api/clients",
                "Period": "5m",
                "Limit": 3
            }
        ]
    },
    "RateLimitPolicies": {
        "RuleSet": [
            {
                "Id": "cl-key-1",
                "Type": "Id",
                "Rules": [
                    {
                        "Endpoint": "*",
                        "Period": "1s",
                        "Limit": 10
                    },
                    {
                        "Endpoint": "get:/api/clients",
                        "Period": "1m",
                        "Limit": 2
                    },
                    {
                        "Endpoint": "put:/api/clients",
                        "Period": "5m",
                        "Limit": 2
                    }
                ]
            },
            {
                "Id": "cl-key-2",
                "Type": "Id",
                "Rules": [
                    {
                        "Endpoint": "*",
                        "Period": "1s",
                        "Limit": 10
                    },
                    {
                        "Endpoint": "post:/api/clients",
                        "Period": "5m",
                        "Limit": 50
                    }
                ]
            },
            {
                "Id": "cl-key-3",
                "Type": "Id",
                "Rules": [
                    {
                        "Endpoint": "post:/api/clients",
                        "Period": "1s",
                        "Limit": 3
                    }
                ]
            },
            {
                "Id": "cl-ip-key-1",
                "Type": "Id",
                "Rules": [
                    {
                        "Endpoint": "*",
                        "Period": "1m",
                        "Limit": 2
                    }
                ]
            },
            {
                "Id": "84.247.85.224",
                "Type": "Ip",
                "Rules": [
                    {
                        "Endpoint": "*",
                        "Period": "1s",
                        "Limit": 10
                    },
                    {
                        "Endpoint": "*",
                        "Period": "1m",
                        "Limit": 2
                    },
                    {
                        "Endpoint": "post:/api/values",
                        "Period": "1m",
                        "Limit": 5
                    }
                ]
            },
            {
                "Id": "84.247.85.225",
                "Type": "Ip",
                "Rules": [
                    {
                        "Endpoint": "*",
                        "Period": "1s",
                        "Limit": 10
                    },
                    {
                        "Endpoint": "*",
                        "Period": "1m",
                        "Limit": 5
                    },
                    {
                        "Endpoint": "*",
                        "Period": "1h",
                        "Limit": 2
                    }
                ]
            },
            {
                "Id": "84.247.85.226",
                "Type": "Ip",
                "Rules": [
                    {
                        "Endpoint": "*",
                        "Period": "1s",
                        "Limit": 10
                    },
                    {
